<%- include('partials/header') %>
<h1>All users</h1>
<div class="row">
  <% users.forEach(user=>{ %>
    <div class="col-4 post-card">
      <div class="row">
        <div class="col-4">
          <p>Username:</p>
        </div>
        <div class="col-8">
          <p><%= user.username %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <p>Follower count:</p>
        </div>
        <div class="col-8">
          <p><%= user.followerCount %></p>
        </div>
      </div>
      <a href="/users/<%= user.username %>" class='btn btn-primary'>View user</a>
    </div>
  <% }) %>

</div>

<%- include('partials/footer') %>
