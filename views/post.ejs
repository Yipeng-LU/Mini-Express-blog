<%- include('partials/header') %>
<h1><%= post.title %></h1>
<form class="" action="/posts/<%= post.id %>?_method=PUT" method="post">
  <button type="submit" class='btn btn-primary btn-lg center-btn'>
    <% if (!starStatus){ %>
    Star this post
    <% }else{ %>
    Unstar this post
    <% } %>
  </button>
</form>
<div class='info-container'>
  <div class='row'>
    <div class='col'>
      <p>Author:</p>
    </div>
    <div class='col'>
      <p><%= post.author %></p>
    </div>
  </div>
  <div class='row'>
    <div class='col'>
      <p>Published at:</p>
    </div>
    <div class='col'>
      <p><%= post.publishDate.toLocaleDateString() %></p>
    </div>
  </div>
  <div class='row'>
    <div class='col'>
      <p>Star count:</p>
    </div>
    <div class='col'>
      <p><%= post.starCount %></p>
    </div>
  </div>
  <div class='row'>
    <div class='col'>
      <p>From:</p>
    </div>
    <div class='col'>
      <p><%= post.city %> <%= post.temperature %>Â°C <%= post.weather %></p>
    </div>
  </div>
</div>
<p class='post-content'><%= post.content %></p>
<form class="" action="/posts/<%= post._id %>/comments" method="post">
  <textarea class='form-control comment-area' name="content" rows="2" cols="80" placeholder="Please insert your comment here" required><%= commentValue %></textarea>
  <button type="submit" class='btn btn-primary'>Submit</button>
</form>
<% if (post.comments.length!==0){ %>
  <h3>Comments</h3>
<% } %>

<% post.comments.forEach(comment=>{ %>
  <div class="comment-card">
    <p ><%= comment.content %></p>
    <div class="row">
      <div class="col-1">
        <p>Username:</p>
      </div>
      <div class="col-10">
        <p><%= comment.author %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-1">
        <p>Publish at:</p>
      </div>
      <div class="col-10">
        <p><%= comment.publishDate.toLocaleDateString() %></p>
      </div>
    </div>

  </div>
<% }) %>
<%- include('partials/footer') %>
